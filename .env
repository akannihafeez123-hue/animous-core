# Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT=your_admin_chat_id_or_username_here
ADMIN_ID=optional_legacy_admin_id_here
ADMIN_SECRET=pick_a_strong_admin_secret_here

# Bitget API (required for live orders)
BITGET_API_KEY=your_bitget_api_key_here
BITGET_API_SECRET=your_bitget_api_secret_here
BITGET_API_PASSPHRASE=your_bitget_api_passphrase_here
# Optionally override REST base (not usually needed)
BITGET_REST_BASE=https://api.bitget.com

# Webhook secret for TradingView alerts
TV_WEBHOOK_SECRET=choose_a_secret_for_tv_webhook

# General runtime
PORT=8080
MODEL_DIR=/tmp/po_models

# Symbols (comma separated)
PO_SYMBOLS=BTCUSDT,ETHUSDT

# Safety and thresholds
DRY_RUN=true
AUTO_MONITOR_POLL=5.0
MAX_CONCURRENT_MONITORS=8
ORDER_SIZE=0.001

# Strategy thresholds (tweak carefully)
STRATEGY_ALIGN_THRESHOLD=0.8
INDICATOR_ALIGN_THRESHOLD=0.8
TIMEFRAME_AGREE_THRESHOLD=0.8
REQUIRED_STRATEGY_AGREE=3
REQUIRED_INDICATOR_AGREE=3
REQUIRED_TIMEFRAME_AGREE=3
MIN_CONFIDENCE_TO_SIGNAL=0.8

# Optional: TensorFlow settings (if using TF)
KERAS_WINDOW=32
KERAS_EPOCHS=6
KERAS_BATCH=32

# Optional keepalive / deploy health ping (set to your URL if desired)
CHOREO_PING_URL=

# Service selection
# Set which provider the services will use. For Gemini via proxy set USE_GEMINI=1
USE_GEMINI=1

# -------------------------
# Google Gemini (AI Studio)
# -------------------------
# Gemini API key (store real key in Choreo Secrets; keep placeholder here only for local dev)
UPSTREAM_API_KEY=<YOUR_GEMINI_API_KEY>

# Gemini text generation endpoint (replace MODEL with chosen model, e.g., text-bison-001 or a Gemini model name)
UPSTREAM_TEXT_URL=https://api.generative.google/v1/models/<MODEL>:generate

# Optional: Gemini voice/ASR endpoint (if you have one)
UPSTREAM_VOICE_URL=

# If your project uses an OAuth client instead of an API key, set these and leave UPSTREAM_API_KEY blank
CHATGPT5_TOKEN_URL=
CHATGPT5_CLIENT_ID=
CHATGPT5_CLIENT_SECRET=

# -------------------------
# Proxy / Bot / Core shared secrets and config
# -------------------------
# Shared proxy key â€” use a securely generated value (also set as a Choreo secret)
BOT_PROXY_KEY=<GENERATED_BOT_PROXY_KEY>

# If the proxy exposes a static auth token (not recommended) you can set it
CHATGPT5_AUTH_TOKEN=

# Proxy public URL (set this after deploying the proxy in Choreo)
CHATGPT5_PROXY=https://<your-proxy-host>.choreo.run/v1/generate
CHATGPT5_VOICE_PROXY=https://<your-proxy-host>.choreo.run/v1/transcribe

# -------------------------
# Telegram bot settings (bot service)
# -------------------------
TELEGRAM_BOT_TOKEN=<YOUR_TELEGRAM_BOT_TOKEN>
ADMIN_CHAT=<YOUR_TELEGRAM_CHAT_ID>

# -------------------------
# Core worker settings
# -------------------------
PLATFORMS_TO_LEARN=LabelNet|https://labelnet.ai/docs,TaskHive|https://taskhive.io/help
CORE_SLEEP_SECONDS=300
AUTO_LEARN_ENABLED=true
AUTO_RETRAIN_ENABLED=true

# -------------------------
# Optional provider fallbacks (if you want OpenAI/Anthropic available locally)
# -------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# -------------------------
# Local development helpers
# -------------------------
# Set to 1 to let run.sh start all processes in one container during local dev
SINGLE_CONTAINER_MODE=1

# Port for proxy (Choreo sets this automatically when running in platform)
PORT=8080

# Wallet / bookkeeping
WALLET_ADDRESS=
